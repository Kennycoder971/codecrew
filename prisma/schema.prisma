datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "mongodb"
}

model User {
    id             String @id @default(auto()) @map("_id") @db.ObjectId
    name           String
    email          String @unique
    hashedPassword String
    posts          Post[]
}

model Post {
    id        String  @id @default(auto()) @map("_id") @db.ObjectId
    title     String
    content   String
    published Boolean @default(false)
    author    User    @relation(fields: [authorId], references: [id])
    authorId  String  @db.ObjectId
}
